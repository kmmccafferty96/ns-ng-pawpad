{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": ["es2017", "dom", "es6"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
            "*": ["./node_modules/*"]
        }
    },
    "angularCompilerOptions": {
        "enableIvy": false
    },
    "includes": ["references.d.ts"],
    "files": ["./src/main.ts"],
    "exclude": ["node_modules", "platforms", "**/*.aot", "e2e"]
}
